{
    "properties": {
        "core_fields": {
            "properties": {
                "type": {
                    "type": "keyword"
                },
                "full_record": {
                    "type": "flattened"
                }
            }
        },
        "type": {
            "type": "alias",
            "path": "core_fields.type"
        },
        "geometry": {
            "properties": {
                "point": {
                    "type": "geo_point"
                },
                "shape": {
                    "type": "geo_shape"
                }
            }
        }
    },
    "dynamic_templates": [
        {
            "general_topic_id": {
                "path_match": "core_fields.general_topics.resource.core_fields.id",
                "mapping": {
                    "type": "keyword",
                    "store": true,
                    "copy_to": "general_topic_id"
                }
            }
        },
        {
            "spatial_topic_id": {
                "path_match": "core_fields.spatial_topics.resource.core_fields.id",
                "mapping": {
                    "type": "keyword",
                    "store": true,
                    "copy_to": "spatial_topic_id"
                }
            }
        },
        {
            "temporal_topic_id": {
                "path_match": "core_fields.temporal_topics.resource.core_fields.id",
                "mapping": {
                    "type": "keyword",
                    "store": true,
                    "copy_to": "temporal_topic_id"
                }
            }
        },
        {
            "uri": {
                "path_match": "*.uri",
                "mapping": {
                    "type": "keyword",
                    "store": true
                }
            }
        }
    ]
}