FROM elixir:1.11-alpine AS build

WORKDIR /app

# Install Hex + Rebar
RUN mix do local.hex --force, local.rebar --force

COPY mix.* ./
COPY config/ config
COPY apps/argos_data/mix.* /app/apps/argos_data/

ENV MIX_ENV=prod
RUN mix do deps.get, deps.compile

COPY apps/argos_data/lib /app/apps/argos_data/lib
COPY priv priv

RUN mix do compile, release data

########################################################################

FROM alpine:3.9 AS app
RUN apk add --no-cache openssl ncurses-libs

WORKDIR /app

RUN chown nobody:nobody /app

USER nobody:nobody

COPY --from=build --chown=nobody:nobody /app/_build/prod/rel/data .

ENV HOME=/app

CMD ["bin/data", "start"]