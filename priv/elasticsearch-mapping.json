{
    "properties": {
        "core_fields": {
            "properties": {
                "type": {
                    "type": "keyword"
                },
                "full_record": {
                    "type": "flattened"
                }
            }
        },
        "type": {
            "type": "alias",
            "path": "core_fields.type" 
        }
    },
    "dynamic_templates": 
    [
        {
            "general_topic": {
                "path_match": "core_fields.general_topics.resource.core_fields.source_id",
                "mapping": {
                    "type": "keyword",
                    "store": true,
                    "copy_to": "general_topic"
                }
            }
        },
        {
            "spatial_topic": {
                "path_match": "core_fields.spatial_topics.resource.core_fields.source_id",
                "mapping": {
                    "type": "keyword",
                    "store": true,
                    "copy_to": "spatial_topic"
                }
            }
        },
        {
            "temporal_topic": {
                "path_match": "core_fields.temporal_topics.resource.core_fields.source_id",
                "mapping": {
                    "type": "keyword",
                    "store": true,
                    "copy_to": "temporal_topic"
                }
            }
        },
        {
            "uri": {
                "path_match": "*.uri",
                "mapping": {
                    "type": "keyword",
                    "store": true
                }
            }
        }
    ]
}